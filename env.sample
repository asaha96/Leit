# Local Postgres connection string
DATABASE_URL=postgres://localhost:5432/leit

# JWT secret for local auth (use strong secret in production)
JWT_SECRET=change-me

# Canvas token encryption secret (use strong secret in production)
CANVAS_TOKEN_SECRET=change-me-too

# Canvas API token (optional; per-user tokens set in Dashboard)
VITE_CANVAS_API_KEY=

# API origin for production (leave empty for dev; Vite proxy handles /api)
# Example: VITE_API_ORIGIN=https://api.yourdomain.com
VITE_API_ORIGIN=

# DeepSeek AI (optional - enables AI hints and explanations in Practice)
# Example Azure endpoint: https://your-resource.services.ai.azure.com/openai/v1/
DEEPSEEK_ENDPOINT=
DEEPSEEK_API_KEY=
DEEPSEEK_DEPLOYMENT=DeepSeek-V3

